<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Disabled Buttons" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Default"
                bootstrapbutton:bb_icon_left="fa-info-circle"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="default" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Primary"
                bootstrapbutton:bb_icon_right="fa-picture-o"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="primary" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Info"
                bootstrapbutton:bb_icon_left="fa-unlock-o"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="info" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Success"
                bootstrapbutton:bb_icon_right="fa-chevron-circle-right"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="success" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Warning"
                bootstrapbutton:bb_icon_left="fa-location-arrow"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="warning" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Danger"
                bootstrapbutton:bb_icon_right="fa-code"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="danger" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="inverse"
                bootstrapbutton:bb_icon_left="fa-thumbs-up"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="inverse" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>