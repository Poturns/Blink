<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/fragment_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/page_row_margin"
        android:layout_marginLeft="@dimen/page_column_margin"
        android:layout_marginRight="@dimen/page_column_margin"
        android:layout_marginTop="@dimen/page_row_margin"
        android:background="@drawable/fragment_main_drawable" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/page_row_margin"
            android:text="Hello_World!" />

        <Button
            android:id="@android:id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Control Activity" />
    </RelativeLayout>

</RelativeLayout>