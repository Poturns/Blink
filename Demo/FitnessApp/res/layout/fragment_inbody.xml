<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="@drawable/image_barbell" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_balance" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#99000000"
        android:weightSum="1" >

        <TextView
            android:id="@+android:id/inbody_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="2"
            android:text="2014-09-23"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <!-- 나이(성별) -->

        <TextView
            android:id="@+id/inbody_age_gender"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:text="나이(성별)"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- 체중 (평균 몸무게) -->

        <TextView
            android:id="@+id/inbody_weight"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:text="체중 (평균 몸무게)"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- 금일 칼로리 소모량 / 프로그레스 -->

        <ProgressBar
            android:id="@+id/inbody_progressbar"
            style="@style/inbody_progressbar"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.1"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+android:id/inbody_progressbar_summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:layout_weight="0.1"
            android:text="50/100 (현재 운동량/필요 운동량)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <!-- go fitness 버튼 -->

		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_weight="0.3"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:weightSum="1">
	        <TextView
	            android:id="@+id/inbody_go_fitness"
	            android:layout_weight="0.5"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_margin="10dp"
	            android:background="@drawable/inbody_button"
	            android:clickable="true"
	            android:gravity="center"
	            android:text="운동하기"
	            android:textAppearance="?android:attr/textAppearanceListItemSmall"
	            android:textColor="@android:color/white"
	            android:textSize="20sp"
	            android:textStyle="bold" />
	        
	        <TextView
	            android:id="@+id/inbody_update"
	            android:layout_weight="0.5"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_margin="10dp"
	            android:background="@drawable/inbody_button"
	            android:gravity="center"
	            android:clickable="true"
	            android:text="업데이트"
	            android:textAppearance="?android:attr/textAppearanceListItemSmall"
	            android:textColor="@android:color/white"
	            android:textSize="20sp"
	            android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>