<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/fitness_count"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fitness_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fitness_heart_beat"
        android:layout_alignBottom="@+id/fitness_heart_beat"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/fitness_heart_beat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/fitness_count"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/ic_action_health_heart"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>