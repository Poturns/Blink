<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/heartbeat_heart"
        android:layout_marginTop="38dp"
        android:indeterminateBehavior="cycle"
        android:indeterminateDrawable="@drawable/progress_indeterminate_red"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator" />

    <TextView
        android:id="@+id/heartbeat_heart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_action_health_heart_big"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@android:id/button1"
        android:background="@color/red" >
    </LinearLayout>

    <TextView
        android:id="@android:id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>