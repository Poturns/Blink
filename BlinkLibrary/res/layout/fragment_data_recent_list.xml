<?xml version="1.0" encoding="utf-8"?>
<!-- DataSelectFragment의 RecentListFragment의 Layout, 최근에 변경된 데이터를 리스트로 보여준다 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_header_side_margin"
        android:gravity="center_vertical"
        android:text="@string/recent_list" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/list_header_side_margin"
        android:layout_marginRight="@dimen/list_header_side_margin"
        android:background="@android:color/darker_gray" />

    <include
        android:layout_marginLeft="@dimen/list_side_margin"
        android:layout_marginRight="@dimen/list_side_margin"
        layout="@layout/view_listview" />

    <include layout="@layout/view_empty" />

</LinearLayout>