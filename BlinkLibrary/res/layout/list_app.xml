<?xml version="1.0" encoding="utf-8"?>
<!-- ConnectionFragment의 Dialog에서 'Device 정보'를 보여줄 때, 리스트 하나의 아이템을 구성할 Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <include layout="@android:layout/simple_list_item_1" />

    <Button
        android:id="@+id/fragment_connection_db_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/show_db_info" />

    <Button
        android:id="@+id/fragment_connection_log_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/show_log_info" />

</LinearLayout>