<?xml version="1.0" encoding="utf-8"?>
<!-- ConnectionFragment의 Dialog에서 'Device 정보'를 보여줄 때, 리스트 하나의 아이템을 구성할 Layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/res_blink_fragment_connection_db_info"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <TextView
        android:id="@+id/res_blink_fragment_connection_db_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/res_blink_fragment_connection_log_info"
        android:background="@drawable/res_blink_selector_button"
        android:drawableLeft="@drawable/res_blink_ic_action_storage_database"
        android:gravity="center"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/res_blink_fragment_connection_log_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/res_blink_selector_button"
        android:drawableLeft="@drawable/res_blink_ic_action_storage_log"
        android:gravity="center" />

</RelativeLayout>